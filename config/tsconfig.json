{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "../lib",
    "declaration": true,
    "sourceMap": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "baseUrl": "..",
    "paths": {
      "@/*": ["../src/*"]
    },
    "typeRoots": [
      "../node_modules/@types",
      "../src/types"
    ],
    "skipLibCheck": true
  },
  "include": [
    "../src/**/*.ts",
    "../src/**/*.vue",
    "../src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
